<?xml version="1.0" encoding="utf-8"?>
<extension type="template" version="3.8" client="site" method="upgrade">
  <name>XT Tailwind CSS</name>
  <version>3.7.0</version>
  <creationDate>2020-07-24</creationDate>

	<author>Extly, CB</author>
	<authorEmail>team@extly.com</authorEmail>
	<authorUrl>https://www.extly.com</authorUrl>
	<copyright>Copyright (c)2012-2020 Extly, CB All rights reserved.</copyright>
	<license>GNU/GPLv3 www.gnu.org/licenses/gpl-3.0.html</license>

  <description><![CDATA[
XT Tailwind - My Blog template, based on Tailwind CSS.
]]>  </description>

  <files>
    <folder>css</folder>
    <folder>dist</folder>
    <folder>html</folder>
    <folder>js</folder>
    <folder>src</folder>

    <filename>component.php</filename>
    <filename>error.php</filename>
    <filename>favicon.ico</filename>
    <filename>index.php</filename>
    <filename>offline.php</filename>
    <filename>package.json</filename>
    <filename>postcss.config.js</filename>
    <filename>tailwind.config.js</filename>
    <filename>template_preview.png</filename>
    <filename>template_thumbnail.png</filename>
    <filename>templateDetails.xml</filename>
    <filename>webpack.config.js</filename>
  </files>
  <languages>
    <language tag="en-GB">language/en-GB/en-GB.tpl_xttailwind.ini</language>
    <language tag="en-GB">language/en-GB/en-GB.tpl_xttailwind.sys.ini</language>
  </languages>
  <positions>
    <position>search</position>
    <position>language-switcher</position>
    <position>mainbar-a</position>
    <position>aside-a</position>
    <position>analytics</position>
    <position>debug</position>
  </positions>
  <config>
    <fields name="params">
      <fieldset name="advanced">
        <field name="logoTitle" type="text" default="" label="Logo Title" filter="string"/>
        <field name="siteDescription" type="text" default="" label="JGLOBAL_DESCRIPTION"
          description="JGLOBAL_SUBHEADING_DESC" filter="string"/>
        <field name="headScripts" type="textarea" default="" label="Head Scripts" filter="raw" rows="6" cols="120"
          class="input-xxlarge"/>
        <field name="allowedScriptsAndStylesheets" type="textarea" default="recaptcha, schema.org, application/ld+json" label="Allowed CMS Scripts and Stylesheets"
          filter="raw" rows="6" cols="120" class="input-xxlarge"
          description="List of keywords to allow the inclusion of core scripts and stylesheets. * to allow everything."/>
      </fieldset>
    </fields>
  </config>
</extension>
